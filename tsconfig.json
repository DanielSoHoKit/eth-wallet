{ 
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2017",
        "allowJs": true,
        "module": "commonjs",        
        "moduleResolution": "node",   
        "esModuleInterop": true,
        "outDir": "lib",                      
        "removeComments": true,         
        "declaration": true,
        "declarationDir": "types"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "example",
        "test"
    ]
}