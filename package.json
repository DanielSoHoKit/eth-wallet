{
    "name": "@ijstech/eth-wallet",
    "version": "0.1.15",
    "license": "AGPL-3.0",
    "main": "lib/index.js",
    "bin": {
        "sol2ts": "tools/bin/compile.js"
    },
    "types": "types/index.d.ts",
    "dependencies": {
        "asn1.js": "5.4.1",
        "aws-sdk": "2.944.0",
        "bignumber.js": "9.0.1",
        "bn.js": "5.2.0",
        "ethereumjs-tx": "2.1.2",
        "ethereumjs-util": "7.0.7",
        "solc": "0.8.6",
        "web3": "1.8.0",
        "ethereum-cryptography": "1.1.2"
    },
    "devDependencies": {
        "@types/mocha": "9.1.1",
        "@types/node": "14.17",
        "esbuild": "0.13.13",
        "ganache": "7.2.0",
        "mocha": "10.0.0",
        "ts-node": "10.1.0",
        "typescript": "4.2.4",
        "@openzeppelin/contracts": "4.7.3"
    },
    "scripts": {
        "build": "tsc && cp -r ./src/contracts/bin ./lib/contracts/bin && node esbuild.bundle.js",
        "build:tools": "cd tools && rm -rf bin && tsc && cd ..",
        "build:test": "rm -f test/contracts/*.ts && node tools/bin/compile.js test/test-contracts.json && sh ./scripts/replaceTestContracts.sh",
        "test": "mocha --ui tdd --exit --require ts-node/register test/*.spec.ts",
        "test:signTypedData": "mocha --ui tdd --exit --require ts-node/register test/signTypedData.spec.ts"
    }
}
